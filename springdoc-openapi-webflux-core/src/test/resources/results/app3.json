    }
  ],
  "paths": {
    "/tweets/{id}": {
      "get": {
        "tags": [
          "tweet-controller"
        ],
        "operationId": "getTweetById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "tweet not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TweetDTO"
                }
              }
            }
          },
          "409": {
            "description": "default response",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "200": {
            "description": "get Tweet By Id",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TweetDTO"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "tweet-controller"
        ],
        "operationId": "updateTweet",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TweetDTO"
              }
            }
          }
        },
        "responses": {
          "404": {
            "description": "tweet not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TweetDTO"
                }
              }
            }
          },
          "409": {
            "description": "default response",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "200": {
            "description": "update Tweet",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TweetDTO"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "tweet-controller"
        ],
        "operationId": "deleteTweet",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "tweet not found"
          },
          "409": {
            "description": "default response",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "200": {
            "description": "delete Tweet"
          }
        }
      }
    },
    "/stream/tweets": {
      "get": {
        "tags": [
          "tweet-controller"
        ],
        "description": "Tweets are Sent to the client as Server Sent Events",
        "operationId": "streamAllTweets",
        "responses": {
          "404": {
            "description": "default response",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "409": {
            "description": "default response",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "200": {
            "description": "stream All Tweets",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TweetDTO"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tweets": {
      "get": {
        "tags": [
          "tweet-controller"
        ],
